<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Marks"
    android:padding="10dp">

    <TextView
        android:id="@+id/attendance"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Marks"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="@color/black"/>
    <Button
        android:id="@+id/goback1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go Back"
        android:textStyle="bold"
        android:textColor="@color/white"

        android:layout_marginLeft="300dp"

        android:background="@drawable/button_rounded"
        />

    <TextView
        android:id="@+id/studentstranscript"
        android:layout_width="393dp"
        android:layout_height="56dp"
        android:layout_below="@+id/goback1"
        android:layout_marginTop="10dp"
        android:text="Student Marks"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold" />
    <Button
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go Back"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:onClick="goToHomeFromMarks"
        android:layout_marginLeft="300dp"

        android:background="@drawable/button_rounded"
        />

    <ListView

        android:id="@+id/marks_list"
        android:layout_width="wrap_content"
        android:layout_height="588dp"
        android:layout_below="@+id/studentstranscript"
        android:layout_marginTop="10dp" />
</RelativeLayout>
